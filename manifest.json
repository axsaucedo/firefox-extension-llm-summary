{
  "manifest_version": 2,
  "name": "LLM Utilities",
  "version": "1.0.0",
  "description": "A Firefox extension providing utilities for LLM interactions including text summarization and AI-powered content analysis.",

  "permissions": [
    "activeTab",
    "storage",
    "http://localhost/*",
    "https://localhost/*"
  ],

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "LLM Utilities",
    "default_icon": {
      "16": "popup/icons/icon-16.png",
      "32": "popup/icons/icon-32.png",
      "48": "popup/icons/icon-48.png",
      "128": "popup/icons/icon-128.png"
    }
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "popup/icons/icon-16.png",
    "32": "popup/icons/icon-32.png",
    "48": "popup/icons/icon-48.png",
    "128": "popup/icons/icon-128.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}